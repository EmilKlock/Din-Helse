<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recommandations">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kosthold:"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_margin="2.5dp"
            android:clickable="true"
            android:background="@drawable/layout_bg">

            <ImageView
                android:id="@+id/imageViewDiet1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingRight="5dp"
                android:src="@drawable/nutrition_fill0_wght400_grad0_opsz48"
                app:tint="@color/green_2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewDiet1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kalorianbefaling"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewDiet1_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Frokost: 350 kcal..."
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_margin="2.5dp"
            android:clickable="true"
            android:background="@drawable/layout_bg">

            <ImageView
                android:id="@+id/imageViewDiet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingRight="5dp"
                android:src="@drawable/nutrition_fill0_wght400_grad0_opsz48"
                app:tint="@color/green_2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewDiet2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saltanbefaling"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewDiet2_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2,100 mg per dag"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/textViewCalculators"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kalkulatorer:"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_margin="2.5dp"
            android:clickable="true"
            android:background="@drawable/layout_bg">

            <ImageView
                android:id="@+id/imageViewLab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingRight="5dp"
                android:src="@drawable/calculate"
                app:tint="@color/green_2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewLab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Kalorikalkulator"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_margin="2.5dp"
            android:clickable="true"
            android:background="@drawable/layout_bg">

            <ImageView
                android:id="@+id/imageViewSodium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingRight="5dp"
                android:src="@drawable/calculate"
                app:tint="@color/green_2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewSodium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Sodiumkalkulator"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>